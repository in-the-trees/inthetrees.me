---
import type { Microblog } from "~libs/microblog";
import DynamicTimestamp from "~components/microblog/dynamic-timestamp";

interface Props {
   post: Microblog;
   inFeed?: boolean;
}

const { post, inFeed } = Astro.props;
---

<article>
   <header
      class="font-serif italic text-xs text-black/[.72] flex items-center gap-2"
   >
      <span
         >Posted <time datetime={post.date_published}
            ><DynamicTimestamp date={post.date_published} client:load /></time
         ></span
      >
   </header>
   <Fragment set:html={post.content_html} />
</article>
