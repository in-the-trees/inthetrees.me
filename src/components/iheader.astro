---
interface Props {
   title: string;
   links: {
      href: string;
      text: string;
   }[];
}

const { title, links } = Astro.props;
---

<style>
   nav a {
      @apply underline decoration-wavy underline-offset-2;
      @apply decoration-black/10 hover:decoration-raspberry;
   }
</style>

<header slot="hnav" class="flex items-center gap-3 text-xs mb-7">
   <h1 class="font-serif text-xl font-[327]">{title}</h1>
   <hr class="border-black/5 w-full" />
   <nav class="text-black/50">
      <ul class="flex gap-2">
         {
            links.map((link) => (
               <li>
                  <a href={link.href}>{link.text}</a>
               </li>
            ))
         }
      </ul>
   </nav>
</header>
