---
interface Props {
   title:
      | string
      | {
           text: string;
           italic?: boolean;
        };
   links: {
      href: string;
      text: string;
   }[];
}

const { title, links } = Astro.props;
---

<style>
   nav a {
      @apply underline underline-offset-1;
      @apply decoration-black/10 hover:decoration-raspberry;
   }

   _::-webkit-full-page-media,
   _:future,
   :root nav a {
      @apply decoration-wavy underline-offset-2;
   }
</style>

<header slot="hnav" class="flex items-center gap-3 text-xs mb-7">
   <h1
      class:list={[
         "font-serif text-xl font-[327]",
         { italic: typeof title !== "string" && title.italic },
      ]}
   >
      {typeof title === "string" ? title : title.text}
   </h1>
   <hr class="border-black/[.027] w-full" />
   <nav class="text-black/50">
      <ul class="flex gap-2">
         {
            links.map((link) => (
               <li>
                  <a href={link.href}>{link.text}</a>
               </li>
            ))
         }
      </ul>
   </nav>
</header>
